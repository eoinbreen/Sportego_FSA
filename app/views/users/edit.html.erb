<% provide(:title, 'Edit User') %>
<h1>Update your account</h1>

<div class="form">
    <%= form_for @user, html: { multipart: true } do |f| %>
      <%= render 'shared/error_messages' %>
        
      <%= f.text_field :name, :placeholder => "Name", class: 'form-control' %>
      
      <%= f.text_field :username, :placeholder => "Username", class: 'form-control' %>
     
      <%= f.email_field :email, :placeholder => "Email", class: 'form-control' %>
      
      <%= f.password_field :password , :placeholder => "Password (6-20 Characters)", class: 'form-control' %>
     
      <%= f.password_field :password_confirmation , :placeholder => "Password Confirmation", class: 'form-control' %>
     
      <br>
      <%= f.label :country %>
      <%= f.collection_select :country, User::COUNTRIES, :to_s, :to_s, :include_blank => true%>
      <br>
      <%= f.label :dob %>
      <%= f.date_select :dob,
          use_month_numbers: true,
          order: [:day, :month, :year],
          start_year: 1900%>
          
      <br>
      <%= f.label :profile_pic %>
      <%= f.file_field :profile_pic%>

      <%= f.submit "Save changes", class: "btn btn-primary" %>
    <% end %>
  
</div>